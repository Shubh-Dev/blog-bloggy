<div class="full-post-container">
<% @posts.each_with_index do |post, index| %>
<div class="full-post-header">
    <h4>Post: <%= index + 1 %> by <%= post.user.name %></h4>
    <div class="counter-holder">
        <p>Comments<%= post.likes_counter || 0 %>,</p>
        <p>Likes<%= post.comments_counter || 0 %></p>
    </div>
</div>
<div class="full-post">
    <h2><%= post.title %></h2>
    <p><%= post.text %></p>
</div>
<div class="full-post-comments-holder">
    <h3>Comments:</h3>
    <% post.comments.each do |comment| %>
    <div class="full-post-comment">
        <h3><%= comment.user.name %>:</h3>
        <p><%= comment.text %></p>
    </div>
    <% end %>
</div>
<% end %>


</div>

